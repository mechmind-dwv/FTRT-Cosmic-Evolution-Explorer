# FTRT Cosmic Evolution Explorer - Environment Variables
# Copy this file to .env and fill in your values

# Application
VITE_APP_NAME=FTRT Cosmic Evolution Explorer
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# API URLs (NOAA - no key required, public API)
VITE_NOAA_BASE_URL=https://services.swpc.noaa.gov
VITE_NOAA_SOLAR_CYCLE_URL=https://services.swpc.noaa.gov/json/solar-cycle/observed-solar-cycle-indices.json
VITE_NOAA_KP_INDEX_URL=https://services.swpc.noaa.gov/products/noaa-planetary-k-index.json

# NASA JPL Horizons (if implementing real ephemerides)
# VITE_JPL_HORIZONS_API_KEY=your_api_key_here
# VITE_JPL_HORIZONS_URL=https://ssd.jpl.nasa.gov/api/horizons.api

# Feature Flags
VITE_ENABLE_EXPERIMENTAL_FEATURES=false
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_ANALYTICS=false

# Analytics (optional)
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Data Sources
VITE_USE_MOCK_DATA=false
VITE_CACHE_DURATION_MS=3600000

# Performance
VITE_MAX_DATA_POINTS=1000
VITE_ANIMATION_DURATION_MS=1000

# API Rate Limiting
VITE_API_RATE_LIMIT_MS=1000
VITE_MAX_CONCURRENT_REQUESTS=3

# Development
VITE_DEV_PORT=3000
VITE_DEV_HOST=localhost
